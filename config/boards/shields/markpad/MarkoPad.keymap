#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    macros {
        Copy_Macro: Copy_Macro {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&kp LC(C)>
                ;
        };
        Paste_Macro: Paste_Macro {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&kp LC(V)>
                ;
        };
        relapse: relapse {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <40>;
            tap-ms = <20>;
            bindings = 
                <&kp K &kp U &kp N &kp G &kp SPACE
                   &kp P &kp A &kp N &kp A &kp L &kp A &kp N &kp G &kp I &kp N &kp SPACE
                   &kp K &kp O &kp Y &kp SPACE &kp D &kp I &kp SPACE
                   &kp M &kp A &kp R &kp I &kp N &kp I &kp G>;
        };
    };

    &soft_off {
        hold-time-ms = <5000>; // Only turn off it the key is held for 5 seconds or longer.
    };
    keymap {
        compatible = "zmk,keymap";

        default_layer { // Layer 0
// ----------------------------------------------
// |      Z      |        M       |      K      |
// |    &mo 1    |   LEFT SHIFT   |    &mo 2    |
            sensor-bindings = <&left_encoder C_VOL_UP C_VOL_DN &right_encoder PG_UP PG_DN>;
            bindings = <
                &none &soft_off
                &Paste_Macro    &kp P       &Copy_Macro
                &bootloader    &relapse  &mo 1
            >;
        };
        abc { // Layer 1
// ----------------------------------------------
// |      A      |       B       |       C      |
// |    &trans   |    &trans     |     &trans   |
            sensor-bindings = <&left_encoder C_VOL_UP C_VOL_DN &right_encoder PG_UP PG_DN>;
            bindings = <
                &none P &soft_off
                &bt BT_SEL 0     &bt BT_SEL 1     &kp M
                &kp N    &bt BT_CLR_ALL    &trans
            >;
        };
    };
};
