#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    macros {
        relapse: relapse {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <40>;
            tap-ms = <20>;
            bindings = 
                <&kp K &kp U &kp N &kp G &kp SPACE
                   &kp P &kp A &kp N &kp A &kp L &kp A &kp N &kp G &kp I &kp N &kp SPACE
                   &kp K &kp O &kp Y &kp SPACE &kp D &kp I &kp SPACE
                   &kp M &kp A &kp R &kp I &kp N &kp I &kp G>;
        };
        relapse2: relapse2 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <40>;
            tap-ms = <20>;
            bindings = 
                <&kp K &kp U &kp N &kp G &kp SPACE
                 &kp P &kp A &kp N &kp A &kp L &kp A &kp N &kp G &kp I &kp N &kp SPACE
                 &kp K &kp O &kp Y &kp SPACE &kp D &kp I &kp SPACE
                 &kp M &kp A &kp R &kp I &kp N &kp I &kp G>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer { // Layer 0
// ----------------------------------------------
// |      Z      |        M       |      K      |
// |    &mo 1    |   LEFT SHIFT   |    &mo 2    |
            bindings = <
                &to 1 &kp C_MUTE
                &kp LC(V)    &kp P       &kp LC(C)
                &relapse    &bootloader  &relapse2
            >;
            sensor-bindings = <&inc_dec_kp K_VOLUME_UP K_VOLUME_DOWN>;
        };
        abc { // Layer 1
// ----------------------------------------------
// |      A      |       B       |       C      |
// |    &trans   |    &trans     |     &trans   |
            bindings = <
                &to 0 &kp C_MUTE
                &bt BT_SEL 0     &bt BT_SEL 1     &bt BT_SEL 2
                &kp C_NEXT    &bt BT_CLR_ALL    &kp C_PREV
            >;
            sensor-bindings = <&inc_dec_kp PG_UP PG_DN>;
        };
    };
};
