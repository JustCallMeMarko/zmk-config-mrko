#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    macros {
        Copy_Macro: Copy_Macro {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&kp LC(C)>
                ;
        };
        Paste_Macro: Paste_Macro {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&kp LC(V)>
                ;
        };
        relapse: relapse {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            wait-ms = <40>;
            tap-ms = <20>;
            bindings = 
                <&kp K &kp U &kp N &kp G &kp SPACE
                   &kp P &kp A &kp N &kp A &kp L &kp A &kp N &kp G &kp I &kp N &kp SPACE
                   &kp K &kp O &kp Y &kp SPACE &kp D &kp I &kp SPACE
                   &kp M &kp A &kp R &kp I &kp N &kp I &kp G>;
        };
    };
    keymap {
        compatible = "zmk,keymap";

        default_layer { // Layer 0
            display-name = "Base";
// ----------------------------------------------
// |      Z      |        M       |      K      |
// |    &mo 1    |   LEFT SHIFT   |    &mo 2    |
            bindings = <
                &Paste_Macro     &relapse       &Copy_Macro
                &kp P    &mo 1  &relapse
            >;
        };
        abc { // Layer 1
            display-name = "ABC";
// ----------------------------------------------
// |      A      |       B       |       C      |
// |    &trans   |    &trans     |     &trans   |
            bindings = <
                &bt BT_SEL 2    &bt BT_SEL 1      &bt BT_SEL 0 
                &bt BT_CLEAR    &trans    &bt BT_CLEAR
            >;
        };
    };
};
